<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.LetsChat" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#6B74CF</item>
        <item name="colorPrimaryDark">#37499d</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#37474f</item>
        <item name="colorSecondaryVariant">#101f27</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:actionMenuTextColor">@color/textColor</item>
    </style>

    <style name="Titles">
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/libre_franklin_bold</item>
        <item name="android:layout_margin">@dimen/_40sdp</item>
    </style>


    <style name="InputFields">
        <item name="background">@drawable/rounded_corners_shape</item>
    </style>

    <style name="Buttons" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">@dimen/_20sdp</item>
        <item name="cornerFamilyBottomRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_20sdp</item>
    </style>


</resources>